{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "name": "Extinction",
  "description": "An ultra-lightweight AI content blocker extension.",
  "version": "0.0.0",
  "permissions": ["scripting", "storage"],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "background": {
    "{{chrome}}.service_worker": "src/background.js",
    "{{chrome}}.type": "module",
    "{{firefox}}.scripts": ["src/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"],
      "run_at": "document_end"
    }
  ]
}
